---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ContactForm from '../components/contactForm';
---

<Layout title="GrayStackDev - Soluciones Tecnológicas">
	<!-- Header -->
	<header class="fixed top-0 w-full bg-black/95 backdrop-blur-sm z-50 border-b border-white/10">
		<nav class="flex justify-between items-center px-8 py-4 max-w-7xl mx-auto">
			<div class="flex items-center gap-4">
				<div class="flex items-center">
					<img src="/GSDOriginal.png" alt="GrayStackDev Logo" class="h-16 w-auto transition-transform duration-300 hover:scale-105">
				</div>
				<div class="brand-content">
					<h1 class="text-3xl font-bold bg-gradient-to-r from-gray-300 to-gray-600 bg-clip-text text-transparent">GrayStackDev</h1>
					<span class="text-sm text-gray-400 block -mt-1">Soluciones Tecnológicas</span>
				</div>
			</div>
			<div class="hidden md:flex items-center gap-8">
				<a href="#inicio" class="text-white font-medium hover:text-orange-500 transition-colors duration-300 relative group">
					Inicio
					<span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-orange-800 to-orange-500 transition-all duration-300 group-hover:w-full"></span>
				</a>
				<a href="#servicios" class="text-white font-medium hover:text-orange-500 transition-colors duration-300 relative group">
					Servicios
					<span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-orange-800 to-orange-500 transition-all duration-300 group-hover:w-full"></span>
				</a>
				<a href="#contacto" class="bg-gradient-to-r from-orange-800 to-orange-500 px-6 py-3 rounded-full font-semibold transition-all duration-300 hover:-translate-y-0.5 hover:shadow-lg hover:shadow-orange-500/40">
					Contacto
				</a>
			</div>
			<button id="mobileMenuBtn" class="md:hidden flex flex-col cursor-pointer z-50 relative">
				<span class="hamburger-line w-6 h-0.5 bg-white mb-1 transition-all duration-300"></span>
				<span class="hamburger-line w-6 h-0.5 bg-white mb-1 transition-all duration-300"></span>
				<span class="hamburger-line w-6 h-0.5 bg-white transition-all duration-300"></span>
			</button>
		</nav>
	</header>

	<!-- Mobile Menu -->
	<div id="mobileMenu" class="mobile-menu fixed inset-0 bg-black/95 backdrop-blur-lg z-[60] flex items-center justify-center opacity-0 pointer-events-none transition-all duration-300">
		<nav class="flex flex-col items-center gap-8">
			<a href="#inicio" class="mobile-menu-link text-white text-2xl font-medium hover:text-orange-500 transition-colors duration-300">
				Inicio
			</a>
			<a href="#servicios" class="mobile-menu-link text-white text-2xl font-medium hover:text-orange-500 transition-colors duration-300">
				Servicios
			</a>
			<a href="#contacto" class="mobile-menu-link bg-gradient-to-r from-orange-800 to-orange-500 px-8 py-4 rounded-full font-semibold text-xl transition-all duration-300 hover:-translate-y-0.5 hover:shadow-lg hover:shadow-orange-500/40">
				Contacto
			</a>
		</nav>
	</div>

	<main class="main-container">
		<!-- Hero Section - Minimalist Futuristic -->
		<section id="inicio" class="min-h-screen flex items-center justify-center px-8 relative overflow-hidden">
			<!-- Minimalist Geometric Background -->
			<div class="absolute inset-0 -z-10 bg-gradient-to-br from-gray-950 via-gray-900 to-black">
				<!-- Animated gradient orbs -->
				<div class="absolute top-1/4 left-1/4 w-96 h-96 bg-orange-500/10 rounded-full blur-3xl animate-pulse-slow"></div>
				<div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-gray-500/10 rounded-full blur-3xl animate-pulse-slower"></div>
				
				<!-- Geometric grid lines -->
				<div class="absolute inset-0 opacity-20">
					<div class="absolute top-0 left-0 w-full h-full" style="background-image: linear-gradient(rgba(255,255,255,0.03) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,0.03) 1px, transparent 1px); background-size: 100px 100px;"></div>
				</div>
				
				<!-- Floating geometric shapes -->
				<div class="hidden md:block absolute top-20 right-20 w-32 h-32 border border-orange-500/20 rotate-45 animate-float"></div>
				<div class="hidden md:block absolute bottom-40 left-40 w-24 h-24 border border-gray-400/20 animate-float-delayed"></div>
				<div class="hidden lg:block absolute top-1/2 right-1/3 w-16 h-16 border border-orange-500/30 rotate-12 animate-float-delayed-2"></div>
			</div>
			
			<!-- Minimalist Content Container -->
			<div class="max-w-5xl mx-auto text-center relative px-4">
				<!-- Subtle accent line -->
				<div class="w-16 sm:w-20 h-1 bg-gradient-to-r from-transparent via-orange-500 to-transparent mx-auto mb-6 sm:mb-8 animate-pulse"></div>
				
				<h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl xl:text-8xl font-light leading-tight mb-6 sm:mb-8 text-white tracking-tight">
					Transformamos
					<span class="block font-bold bg-gradient-to-r from-orange-500 via-orange-400 to-gray-400 bg-clip-text text-transparent">
						tu negocio
					</span>
					<span class="block text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl mt-2 text-gray-400">
						con tecnología
					</span>
				</h1>
				
				<p class="text-base sm:text-lg md:text-xl text-gray-400 mb-8 sm:mb-12 leading-relaxed max-w-2xl mx-auto font-light px-4">
					Soluciones integrales de mantenimiento, desarrollo web y plataformas educativas
				</p>
				
				<div class="hero-cta flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center items-center w-full sm:w-auto px-4">
					<button class="group relative px-6 sm:px-8 py-3 sm:py-4 text-sm sm:text-base font-medium text-white overflow-hidden rounded-lg transition-all duration-300 hover:scale-105 w-full sm:w-auto">
						<span class="absolute inset-0 bg-gradient-to-r from-orange-600 to-orange-500 transition-transform duration-300 group-hover:scale-110"></span>
						<span class="relative flex items-center justify-center gap-2">
							Conoce nuestros servicios
							<svg class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
							</svg>
						</span>
					</button>
					<button class="px-6 sm:px-8 py-3 sm:py-4 text-sm sm:text-base font-medium text-gray-300 border border-gray-700 rounded-lg transition-all duration-300 hover:border-orange-500/50 hover:text-white hover:bg-orange-500/5 w-full sm:w-auto">
						Ver portafolio
					</button>
				</div>
				
				<!-- Subtle bottom accent -->
				<div class="mt-16 flex justify-center gap-2">
					<div class="w-2 h-2 rounded-full bg-orange-500 animate-pulse"></div>
					<div class="w-2 h-2 rounded-full bg-gray-600 animate-pulse" style="animation-delay: 0.2s;"></div>
					<div class="w-2 h-2 rounded-full bg-gray-700 animate-pulse" style="animation-delay: 0.4s;"></div>
				</div>
			</div>
		</section>

		<!-- Services Grid -->
		<section id="servicios" class="grid grid-cols-1 lg:grid-cols-3 min-h-screen mt-8">
			<!-- Mantenimiento Section -->
			<div class="service-panel relative flex items-center justify-center p-12 bg-gradient-to-br from-slate-800 to-slate-900 cursor-pointer transition-all duration-500 hover:scale-105 group" id="mantenimiento">
				<div class="panel-background absolute inset-0 bg-cover bg-center transition-transform duration-500 group-hover:scale-110">
					<div class="panel-overlay absolute inset-0 bg-black/70 transition-colors duration-300 group-hover:bg-black/50"></div>
				</div>
				<div class="panel-content relative z-10 text-center max-w-sm transform translate-y-5 opacity-90 transition-all duration-500 group-hover:translate-y-0 group-hover:opacity-100">
					<div class="panel-icon text-6xl mb-6 text-orange-500 transition-all duration-300 group-hover:scale-110 group-hover:drop-shadow-[0_0_20px_rgba(255,94,0,0.4)]">
						<i class="fas fa-tools"></i>
					</div>
					<h2 class="text-4xl font-bold mb-4 tracking-wider uppercase">MANTENIMIENTO</h2>
					<p class="text-lg text-gray-300 mb-8 leading-relaxed">
						Soporte técnico especializado para mantener tu equipo funcionando al máximo rendimiento
					</p>
					<ul class="text-left mb-10 space-y-2">
						<li class="flex items-center text-sm text-gray-200">
							<i class="fas fa-check text-cyan-400 mr-3 text-xs"></i>
							Reparación de computadoras y laptops
						</li>
						<li class="flex items-center text-sm text-gray-200">
							<i class="fas fa-check text-cyan-400 mr-3 text-xs"></i>
							Configuración de impresoras
						</li>
						<li class="flex items-center text-sm text-gray-200">
							<i class="fas fa-check text-cyan-400 mr-3 text-xs"></i>
							Activación Office/Windows
						</li>
						<li class="flex items-center text-sm text-gray-200">
							<i class="fas fa-check text-cyan-400 mr-3 text-xs"></i>
							Formateo y optimización
						</li>
						<li class="flex items-center text-sm text-gray-200">
							<i class="fas fa-check text-cyan-400 mr-3 text-xs"></i>
							Soporte hardware y software
						</li>
					</ul>
					<a href="/mantenimiento" class="inline-block bg-transparent text-orange-500 border-2 border-orange-500 px-8 py-3 font-semibold rounded-full transition-all duration-300 hover:bg-orange-500 hover:text-black hover:-translate-y-0.5 hover:shadow-lg hover:shadow-orange-500/40 uppercase tracking-wide">
						Solicitar servicio
					</a>
				</div>
			</div>

			<!-- Nube Section -->
			<div class="service-panel relative flex items-center justify-center p-12 bg-gradient-to-br from-blue-900 to-blue-800 cursor-pointer transition-all duration-500 hover:scale-105 group" id="nube">
				<div class="panel-background absolute inset-0 bg-cover bg-center transition-transform duration-500 group-hover:scale-110">
					<div class="panel-overlay absolute inset-0 bg-black/70 transition-colors duration-300 group-hover:bg-black/50"></div>
				</div>
				<div class="panel-content relative z-10 text-center max-w-sm transform translate-y-5 opacity-90 transition-all duration-500 group-hover:translate-y-0 group-hover:opacity-100">
					<div class="panel-icon text-6xl mb-6 text-orange-500 transition-all duration-300 group-hover:scale-110 group-hover:drop-shadow-[0_0_20px_rgba(255,94,0,0.4)]">
						<i class="fas fa-cloud"></i>
					</div>
					<h2 class="text-4xl font-bold mb-4 tracking-wider uppercase">NUBE</h2>
					<p class="text-lg text-gray-300 mb-6 leading-relaxed">
						Soluciones completas en la nube para tu negocio y documentos personales
					</p>
					
					<!-- Web Hosting Subsection -->
					<div class="service-subsection mb-6">
						<div class="subsection-header flex items-center mb-3">
							<i class="fas fa-globe text-orange-500 mr-2"></i>
							<h3 class="text-lg font-semibold">Web Hosting & Desarrollo</h3>
						</div>
						<ul class="text-left mb-4 space-y-1">
							<li class="flex items-center text-xs text-gray-200">
								<i class="fas fa-check text-cyan-400 mr-2 text-xs"></i>
								Diseño y desarrollo web completo
							</li>
							<li class="flex items-center text-xs text-gray-200">
								<i class="fas fa-check text-cyan-400 mr-2 text-xs"></i>
								Hosting optimizado para tu sitio
							</li>
							<li class="flex items-center text-xs text-gray-200">
								<i class="fas fa-check text-cyan-400 mr-2 text-xs"></i>
								Dominios y certificados SSL
							</li>
							<li class="flex items-center text-xs text-gray-200">
								<i class="fas fa-check text-cyan-400 mr-2 text-xs"></i>
								Mantenimiento web continuo
							</li>
						</ul>
					</div>

					<!-- Cloud Storage Subsection -->
					<div class="service-subsection mb-6">
						<div class="subsection-header flex items-center mb-3">
							<i class="fas fa-cloud-upload-alt text-orange-500 mr-2"></i>
							<h3 class="text-lg font-semibold">Almacenamiento en la Nube</h3>
						</div>
						<ul class="text-left mb-4 space-y-1">
							<li class="flex items-center text-xs text-gray-200">
								<i class="fas fa-check text-cyan-400 mr-2 text-xs"></i>
								Respaldo seguro de documentos
							</li>
							<li class="flex items-center text-xs text-gray-200">
								<i class="fas fa-check text-cyan-400 mr-2 text-xs"></i>
								Acceso desde cualquier dispositivo
							</li>
							<li class="flex items-center text-xs text-gray-200">
								<i class="fas fa-check text-cyan-400 mr-2 text-xs"></i>
								Sincronización automática
							</li>
							<li class="flex items-center text-xs text-gray-200">
								<i class="fas fa-check text-cyan-400 mr-2 text-xs"></i>
								Planes personalizados de almacenamiento
							</li>
						</ul>
					</div>
					
					<a href="/mantenimiento" class="inline-block bg-transparent text-orange-500 border-2 border-orange-500 px-8 py-3 font-semibold rounded-full transition-all duration-300 hover:bg-orange-500 hover:text-black hover:-translate-y-0.5 hover:shadow-lg hover:shadow-orange-500/40 uppercase tracking-wide">
						Solicitar servicio
					</a>
				</div>
			</div>

			<!-- Moodle Section -->
			<div class="service-panel relative flex items-center justify-center p-12 bg-gradient-to-br from-purple-900 to-purple-800 cursor-pointer transition-all duration-500 hover:scale-105 group" id="moodle">
				<div class="panel-background absolute inset-0 bg-cover bg-center transition-transform duration-500 group-hover:scale-110">
					<div class="panel-overlay absolute inset-0 bg-black/70 transition-colors duration-300 group-hover:bg-black/50"></div>
				</div>
				<div class="panel-content relative z-10 text-center max-w-sm transform translate-y-5 opacity-90 transition-all duration-500 group-hover:translate-y-0 group-hover:opacity-100">
					<div class="panel-icon text-6xl mb-6 text-orange-500 transition-all duration-300 group-hover:scale-110 group-hover:drop-shadow-[0_0_20px_rgba(255,94,0,0.4)]">
						<i class="fas fa-graduation-cap"></i>
					</div>
					<h2 class="text-4xl font-bold mb-4 tracking-wider uppercase">MOODLE</h2>
					<p class="text-lg text-gray-300 mb-8 leading-relaxed">
						Plataformas educativas avanzadas para revolucionar el aprendizaje digital
					</p>
					<ul class="text-left mb-10 space-y-2">
						<li class="flex items-center text-sm text-gray-200">
							<i class="fas fa-check text-cyan-400 mr-3 text-xs"></i>
							Implementación Moodle en la nube
						</li>
						<li class="flex items-center text-sm text-gray-200">
							<i class="fas fa-check text-cyan-400 mr-3 text-xs"></i>
							Instalación en servidores locales
						</li>
						<li class="flex items-center text-sm text-gray-200">
							<i class="fas fa-check text-cyan-400 mr-3 text-xs"></i>
							Asesoría en equipos
						</li>
						<li class="flex items-center text-sm text-gray-200">
							<i class="fas fa-check text-cyan-400 mr-3 text-xs"></i>
							Capacitación y soporte
						</li>
						<li class="flex items-center text-sm text-gray-200">
							<i class="fas fa-check text-cyan-400 mr-3 text-xs"></i>
							Personalización avanzada
						</li>
					</ul>
					<button class="bg-transparent text-orange-500 border-2 border-orange-500 px-8 py-3 font-semibold rounded-full transition-all duration-300 hover:bg-orange-500 hover:text-black hover:-translate-y-0.5 hover:shadow-lg hover:shadow-orange-500/40 uppercase tracking-wide">
						Implementar Moodle
					</button>
				</div>
			</div>
		</section>

		<!-- Contact Section -->
		<section class="py-20 px-8 bg-gradient-to-br from-gray-800 to-gray-900" id="contacto">
			<div class="max-w-6xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
				<div class="contact-info">
					<h2 class="text-4xl font-bold mb-4 text-white">¿Listo para transformar tu negocio?</h2>
					<p class="text-xl text-gray-300 mb-8 leading-relaxed">
						Contáctanos y descubre cómo nuestras soluciones tecnológicas pueden impulsar tu crecimiento
					</p>
					<div class="contact-details flex flex-col gap-4">
						<div class="contact-item flex items-center gap-4 text-lg">
							<i class="fas fa-phone text-orange-800 w-5"></i>
							<span>+504 3302-3042</span>
						</div>
						<div class="contact-item flex items-center gap-4 text-lg">
							<i class="fas fa-envelope text-orange-800 w-5"></i>
							<span>graystackdev@gmail.com</span>
						</div>
						<div class="contact-item flex items-center gap-4 text-lg">
							<i class="fas fa-map-marker-alt text-orange-800 w-5"></i>
							<span>Siguatepeque, Honduras</span>
						</div>
					</div>
				</div>
				<div class="contact-form bg-white/5 p-10 rounded-2xl border border-white/10">
				<ContactForm client:load />
			</div>
			</div>
		</section>
	</main>

	<!-- Footer -->
	<footer class="bg-black py-12 px-8 border-t border-white/10">
		<div class="footer-content max-w-6xl mx-auto grid grid-cols-1 lg:grid-cols-3 gap-12">
			<div class="footer-brand">
				<h3 class="text-2xl font-bold mb-2 bg-gradient-to-r from-orange-800 to-orange-500 bg-clip-text text-transparent">
					GrayStackDev
				</h3>
				<p class="text-gray-400">Soluciones tecnológicas que impulsan tu éxito</p>
			</div>
			<div class="footer-links grid grid-cols-1 md:grid-cols-2 gap-8 lg:col-span-2">
				<div class="link-group">
					<h4 class="text-white font-semibold mb-4">Servicios</h4>
					<a href="#mantenimiento" class="block text-gray-400 hover:text-orange-800 transition-colors duration-300 mb-2">Mantenimiento</a>
					<a href="#nube" class="block text-gray-400 hover:text-orange-800 transition-colors duration-300 mb-2">Desarrollo Web</a>
					<a href="#moodle" class="block text-gray-400 hover:text-orange-800 transition-colors duration-300 mb-2">Plataformas Moodle</a>
				</div>
				<div class="link-group">
					<h4 class="text-white font-semibold mb-4">Contacto</h4>
					<a href="tel:+50433023042" class="block text-gray-400 hover:text-orange-800 transition-colors duration-300 mb-2">+504 3302-3042</a>
					<a href="mailto:graystackdev@gmail.com" class="block text-gray-400 hover:text-orange-800 transition-colors duration-300 mb-2">graystackdev@gmail.com</a>
				</div>
			</div>
		</div>
		<div class="footer-bottom max-w-6xl mx-auto mt-8 pt-8 border-t border-white/10 text-center text-gray-400">
			<p>&copy; 2025 GrayStackDev. Todos los derechos reservados.</p>
		</div>
	</footer>

	<!-- Scroll to Top Button -->
	<button id="scrollToTop" class="fixed bottom-8 right-8 w-12 h-12 bg-gradient-to-r from-orange-600 to-orange-500 text-white rounded-full shadow-lg opacity-0 transform translate-y-4 transition-all duration-300 hover:scale-110 hover:shadow-xl z-40" style="display: none;">
		<svg class="w-6 h-6 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
		</svg>
	</button>
</Layout>

<script src="../scripts/main.js"></script>
