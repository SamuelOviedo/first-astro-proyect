---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Portafolio - GrayStackDev">
  <Header />
  
  <main class="min-h-screen bg-gradient-to-br from-gray-950 via-gray-900 to-black pt-20">
    <!-- Hero Section with Profile -->
    <section class="pt-32 pb-20 px-8">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <!-- Profile Image Section -->
          <div class="flex justify-center lg:justify-end order-1 lg:order-2">
            <div class="relative group">
              <!-- Decorative rings -->
              <div
                class="absolute -inset-4 bg-gradient-to-r from-orange-500 to-gray-500 rounded-full opacity-20 blur-2xl group-hover:opacity-30 transition-opacity duration-500"
              >
              </div>
              <div
                class="absolute -inset-2 border-2 border-orange-500/30 rounded-full animate-pulse"
              >
              </div>

              <!-- Profile Image Placeholder -->
              <div
                class="relative w-64 h-64 sm:w-72 sm:h-72 rounded-full overflow-hidden border-4 border-orange-500/50 shadow-2xl shadow-orange-500/20"
              >
                <div
                  class="w-full h-full bg-gradient-to-br from-gray-800 to-gray-900 flex items-center justify-center"
                >
                  <div class="text-center">
                    <i class="fas fa-user text-8xl text-orange-500/30 mb-4 hidden"></i>
                    <img
                      src="/PesonalPicture.jpg"
                      alt="Samuel Oviedo"
                      class="w-full h-full object-cover object-[50%_20%] scale-[1.25] -translate-y-2 sm:object-[50%_30%] sm:scale-125 sm:translate-y-0"
                    />
                  </div>
                </div>
              </div>

              <!-- Floating accent -->
              <div
                class="absolute -bottom-4 -right-4 w-24 h-24 bg-orange-500/20 rounded-full blur-xl"
              >
              </div>
            </div>
          </div>

          <!-- Text Content -->
          <div class="order-2 lg:order-1 text-center lg:text-left">
            <div class="inline-block mb-4">
              <span
                class="px-4 py-2 bg-orange-500/10 border border-orange-500/30 rounded-full text-orange-500 text-sm font-medium"
              >
                Desarrollador Full Stack
              </span>
            </div>

            <h1
              class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6 leading-tight"
            >
              <span class="text-white">Hola, soy</span>
              <span
                class="block bg-gradient-to-r from-orange-500 to-gray-400 bg-clip-text text-transparent"
              >
                Samuel Oviedo
              </span>
            </h1>

            <p class="text-xl text-gray-400 mb-8 leading-relaxed">
              Fundador de <span class="text-orange-500 font-semibold"
                >GrayStackDev</span
              >, especializado en crear soluciones tecnológicas innovadoras que
              transforman negocios.
            </p>

            <div class="flex flex-wrap gap-4 justify-center lg:justify-start">
              <a
                href="/#contacto"
                class="px-8 py-4 bg-gradient-to-r from-orange-600 to-orange-500 text-white font-semibold rounded-lg transition-all duration-300 hover:scale-105 hover:shadow-lg hover:shadow-orange-500/40"
              >
                Contáctame
              </a>
              <a
                href="#proyectos"
                class="px-8 py-4 border-2 border-gray-700 text-gray-300 font-semibold rounded-lg transition-all duration-300 hover:border-orange-500/50 hover:text-white"
              >
                Ver Proyectos
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section class="py-20 px-8 bg-black/30">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-white mb-4">Sobre Mí</h2>
          <div
            class="w-20 h-1 bg-gradient-to-r from-orange-500 to-gray-500 mx-auto"
          >
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div
            class="bg-gradient-to-br from-gray-800/50 to-gray-900/50 p-8 rounded-2xl border border-white/10 hover:border-orange-500/30 transition-all duration-300"
          >
            <div class="text-orange-500 text-4xl mb-4">
              <i class="fas fa-code"></i>
            </div>
            <h3 class="text-2xl font-bold text-white mb-4">Desarrollo Web</h3>
            <p class="text-gray-400 leading-relaxed">
              Especializado en crear sitios web modernos, responsivos y
              optimizados. Trabajo con tecnologías como Astro, React, y
              TailwindCSS para entregar experiencias excepcionales.
            </p>
          </div>

          <div
            class="bg-gradient-to-br from-gray-800/50 to-gray-900/50 p-8 rounded-2xl border border-white/10 hover:border-orange-500/30 transition-all duration-300"
          >
            <div class="text-orange-500 text-4xl mb-4">
              <i class="fas fa-server"></i>
            </div>
            <h3 class="text-2xl font-bold text-white mb-4">
              Soluciones en la Nube
            </h3>
            <p class="text-gray-400 leading-relaxed">
              Implementación de infraestructura cloud, hosting optimizado, y
              soluciones de almacenamiento seguro para mantener tu negocio
              siempre disponible.
            </p>
          </div>

          <div
            class="bg-gradient-to-br from-gray-800/50 to-gray-900/50 p-8 rounded-2xl border border-white/10 hover:border-orange-500/30 transition-all duration-300"
          >
            <div class="text-orange-500 text-4xl mb-4">
              <i class="fas fa-graduation-cap"></i>
            </div>
            <h3 class="text-2xl font-bold text-white mb-4">
              Plataformas Educativas
            </h3>
            <p class="text-gray-400 leading-relaxed">
              Experto en implementación y personalización de Moodle, tanto en la
              nube como en servidores locales, con capacitación completa
              incluida.
            </p>
          </div>

          <div
            class="bg-gradient-to-br from-gray-800/50 to-gray-900/50 p-8 rounded-2xl border border-white/10 hover:border-orange-500/30 transition-all duration-300"
          >
            <div class="text-orange-500 text-4xl mb-4">
              <i class="fas fa-tools"></i>
            </div>
            <h3 class="text-2xl font-bold text-white mb-4">Soporte Técnico</h3>
            <p class="text-gray-400 leading-relaxed">
              Mantenimiento y reparación de equipos, configuración de software,
              y soporte continuo para mantener tu infraestructura tecnológica
              funcionando perfectamente.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Skills Section -->
    <section class="py-20 px-8">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-white mb-4">
            Habilidades Técnicas
          </h2>
          <div
            class="w-20 h-1 bg-gradient-to-r from-orange-500 to-gray-500 mx-auto"
          >
          </div>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
          <!-- Frontend -->
          <div
            class="skill-card bg-gray-800/30 p-6 rounded-xl border border-white/10 hover:border-orange-500/50 transition-all duration-300 hover:scale-105 text-center"
          >
            <img src="/flutter.svg" alt="Flutter logo" class="h-12 w-12 mx-auto mb-3" />
            <p class="text-white font-semibold">Flutter</p>
          </div>

          <div
            class="skill-card bg-gray-800/30 p-6 rounded-xl border border-white/10 hover:border-orange-500/50 transition-all duration-300 hover:scale-105 text-center"
          >
            <i class="fab fa-css3-alt text-5xl text-blue-500 mb-3"></i>
            <p class="text-white font-semibold">CSS3</p>
          </div>

          <div
            class="skill-card bg-gray-800/30 p-6 rounded-xl border border-white/10 hover:border-orange-500/50 transition-all duration-300 hover:scale-105 text-center"
          >
            <i class="fab fa-js text-5xl text-yellow-500 mb-3"></i>
            <p class="text-white font-semibold">JavaScript</p>
          </div>

          <div
            class="skill-card bg-gray-800/30 p-6 rounded-xl border border-white/10 hover:border-orange-500/50 transition-all duration-300 hover:scale-105 text-center"
          >
            <i class="fab fa-react text-5xl text-cyan-500 mb-3"></i>
            <p class="text-white font-semibold">React</p>
          </div>

          <!-- Backend & Tools -->
          <div
            class="skill-card bg-gray-800/30 p-6 rounded-xl border border-white/10 hover:border-orange-500/50 transition-all duration-300 hover:scale-105 text-center"
          >
            <i class="fab fa-node text-5xl text-green-500 mb-3"></i>
            <p class="text-white font-semibold">Node.js</p>
          </div>

          <div
            class="skill-card bg-gray-800/30 p-6 rounded-xl border border-white/10 hover:border-orange-500/50 transition-all duration-300 hover:scale-105 text-center"
          >
            <img src="/dart.svg" alt="Dart logo" class="h-12 w-12 mx-auto mb-3" />
            <p class="text-white font-semibold">Dart</p>
          </div>

          <div
            class="skill-card bg-gray-800/30 p-6 rounded-xl border border-white/10 hover:border-orange-500/50 transition-all duration-300 hover:scale-105 text-center"
          >
            <i class="fab fa-git-alt text-5xl text-orange-600 mb-3"></i>
            <p class="text-white font-semibold">Git</p>
          </div>

          <div
            class="skill-card bg-gray-800/30 p-6 rounded-xl border border-white/10 hover:border-orange-500/50 transition-all duration-300 hover:scale-105 text-center"
          >
            <i class="fab fa-docker text-5xl text-blue-600 mb-3"></i>
            <p class="text-white font-semibold">Docker</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Projects Section -->
    <section id="proyectos" class="py-20 px-8 bg-black/30">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-white mb-4">
            Proyectos Destacados
          </h2>
          <div
            class="w-20 h-1 bg-gradient-to-r from-orange-500 to-gray-500 mx-auto"
          >
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Project 1 -->
          <div
            class="group bg-gradient-to-br from-gray-800/50 to-gray-900/50 rounded-2xl overflow-hidden border border-white/10 hover:border-orange-500/50 transition-all duration-300 hover:scale-105"
          >
            <div
              class="h-48 bg-gradient-to-br from-orange-500/20 to-gray-500/20 flex items-center justify-center"
            >
              <i class="fas fa-laptop-code text-6xl text-orange-500/50"></i>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-bold text-white mb-3">
                Sitios Web Corporativos
              </h3>
              <p class="text-gray-400 mb-4">
                Desarrollo de sitios web profesionales con diseño moderno y
                optimización SEO.
              </p>
              <div class="flex flex-wrap gap-2">
                <span
                  class="px-3 py-1 bg-orange-500/20 text-orange-500 text-xs rounded-full"
                  >Astro</span
                >
                <span
                  class="px-3 py-1 bg-blue-500/20 text-blue-500 text-xs rounded-full"
                  >React</span
                >
                <span
                  class="px-3 py-1 bg-cyan-500/20 text-cyan-500 text-xs rounded-full"
                  >Tailwind</span
                >
              </div>
            </div>
          </div>

          <!-- Project 2 -->
          <div
            class="group bg-gradient-to-br from-gray-800/50 to-gray-900/50 rounded-2xl overflow-hidden border border-white/10 hover:border-orange-500/50 transition-all duration-300 hover:scale-105"
          >
            <div
              class="h-48 bg-gradient-to-br from-purple-500/20 to-blue-500/20 flex items-center justify-center"
            >
              <i class="fas fa-graduation-cap text-6xl text-purple-500/50"></i>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-bold text-white mb-3">
                Plataformas Moodle
              </h3>
              <p class="text-gray-400 mb-4">
                Implementación completa de sistemas LMS para instituciones
                educativas.
              </p>
              <div class="flex flex-wrap gap-2">
                <span
                  class="px-3 py-1 bg-purple-500/20 text-purple-500 text-xs rounded-full"
                  >Moodle</span
                >
                <span
                  class="px-3 py-1 bg-green-500/20 text-green-500 text-xs rounded-full"
                  >PHP</span
                >
                <span
                  class="px-3 py-1 bg-blue-500/20 text-blue-500 text-xs rounded-full"
                  >MySQL</span
                >
              </div>
            </div>
          </div>

          <!-- Project 3 -->
          <div
            class="group bg-gradient-to-br from-gray-800/50 to-gray-900/50 rounded-2xl overflow-hidden border border-white/10 hover:border-orange-500/50 transition-all duration-300 hover:scale-105"
          >
            <div
              class="h-48 bg-gradient-to-br from-blue-500/20 to-cyan-500/20 flex items-center justify-center"
            >
              <i class="fas fa-cloud text-6xl text-blue-500/50"></i>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-bold text-white mb-3">
                Soluciones Cloud
              </h3>
              <p class="text-gray-400 mb-4">
                Infraestructura en la nube, hosting y almacenamiento seguro de
                datos.
              </p>
              <div class="flex flex-wrap gap-2">
                <span
                  class="px-3 py-1 bg-blue-500/20 text-blue-500 text-xs rounded-full"
                  >AWS</span
                >
                <span
                  class="px-3 py-1 bg-orange-500/20 text-orange-500 text-xs rounded-full"
                  >Netlify</span
                >
                <span
                  class="px-3 py-1 bg-gray-500/20 text-gray-400 text-xs rounded-full"
                  >Docker</span
                >
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Experience Timeline -->
    <section class="py-20 px-8">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-white mb-4">Experiencia</h2>
          <div
            class="w-20 h-1 bg-gradient-to-r from-orange-500 to-gray-500 mx-auto"
          >
          </div>
        </div>

        <div class="relative">
          <!-- Timeline line -->
          <div
            class="absolute left-8 md:left-1/2 top-0 bottom-0 w-0.5 bg-gradient-to-b from-orange-500 to-gray-500"
          >
          </div>

          <!-- Timeline items -->
          <div class="space-y-12">
            <div class="relative pl-20 md:pl-0 md:grid md:grid-cols-2 md:gap-8">
              <div class="md:text-right md:pr-8">
                <div
                  class="inline-block bg-orange-500/10 border border-orange-500/30 rounded-lg px-4 py-2 mb-2"
                >
                  <span class="text-orange-500 font-semibold"
                    >2025 - Presente</span
                  >
                </div>
                <h3 class="text-2xl font-bold text-white mb-2">
                  Fundador & CEO
                </h3>
                <p class="text-gray-400">GrayStackDev</p>
              </div>
              <div
                class="absolute left-8 md:left-1/2 w-4 h-4 bg-orange-500 rounded-full -translate-x-1/2 border-4 border-gray-900"
              >
              </div>
              <div class="mt-4 md:mt-0">
                <p class="text-gray-400 leading-relaxed">
                  Liderazgo en el desarrollo de soluciones tecnológicas
                  integrales, desde mantenimiento hasta implementación de
                  plataformas educativas.
                </p>
              </div>
            </div>

            <div class="relative pl-20 md:pl-0 md:grid md:grid-cols-2 md:gap-8">
              <div class="md:text-right md:pr-8 md:order-1">
                <div
                  class="inline-block bg-gray-500/10 border border-gray-500/30 rounded-lg px-4 py-2 mb-2"
                >
                  <span class="text-gray-400 font-semibold">2023 - 2025</span>
                </div>
                <h3 class="text-2xl font-bold text-white mb-2">
                  Desarrollador Full Stack
                </h3>
                <p class="text-gray-400">Zafra Cloud</p>
              </div>
              <div
                class="absolute left-8 md:left-1/2 w-4 h-4 bg-gray-500 rounded-full -translate-x-1/2 border-4 border-gray-900"
              >
              </div>
              <div class="mt-4 md:mt-0 md:order-2">
                <p class="text-gray-400 leading-relaxed">
                  Desempeñé el cargo de desarrollador en Zafra Cloud, participando en la optimización 
				  y mantenimiento de las aplicaciones web y móviles de la empresa. 
				  Mi trabajo se centró en la corrección de errores, mejora tanto del rendimiento
				  como del código base utilizando principalmente PHP.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section
      class="py-20 px-8 bg-gradient-to-r from-orange-600/10 to-gray-600/10 border-y border-orange-500/20"
    >
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-4xl font-bold text-white mb-6">
          ¿Tienes un proyecto en mente?
        </h2>
        <p class="text-xl text-gray-400 mb-8 leading-relaxed">
          Trabajemos juntos para convertir tus ideas en realidad. Estoy aquí
          para ayudarte a alcanzar tus objetivos tecnológicos.
        </p>
        <a
          href="/#contacto"
          class="inline-block px-10 py-4 bg-gradient-to-r from-orange-600 to-orange-500 text-white font-bold rounded-lg transition-all duration-300 hover:scale-105 hover:shadow-2xl hover:shadow-orange-500/40"
        >
          Iniciar Conversación
        </a>
      </div>
    </section>
  </main>

  <!-- Footer -->
  <footer class="bg-black py-12 px-8 border-t border-white/10">
    <div
      class="footer-content max-w-6xl mx-auto grid grid-cols-1 lg:grid-cols-3 gap-12"
    >
      <div class="footer-brand">
        <h3
          class="text-2xl font-bold mb-2 bg-gradient-to-r from-orange-800 to-orange-500 bg-clip-text text-transparent"
        >
          GrayStackDev
        </h3>
        <p class="text-gray-400">
          Soluciones tecnológicas que impulsan tu éxito
        </p>
      </div>
      <div
        class="footer-links grid grid-cols-1 md:grid-cols-2 gap-8 lg:col-span-2"
      >
        <div class="link-group">
          <h4 class="text-white font-semibold mb-4">Servicios</h4>
          <a
            href="/#servicios"
            class="block text-gray-400 hover:text-orange-800 transition-colors duration-300 mb-2"
            >Mantenimiento</a
          >
          <a
            href="/#servicios"
            class="block text-gray-400 hover:text-orange-800 transition-colors duration-300 mb-2"
            >Desarrollo Web</a
          >
          <a
            href="/#servicios"
            class="block text-gray-400 hover:text-orange-800 transition-colors duration-300 mb-2"
            >Plataformas Moodle</a
          >
        </div>
        <div class="link-group">
          <h4 class="text-white font-semibold mb-4">Contacto</h4>
          <a
            href="tel:+50433023042"
            class="block text-gray-400 hover:text-orange-800 transition-colors duration-300 mb-2"
            >+504 3302-3042</a
          >
          <a
            href="mailto:graystackdev@gmail.com"
            class="block text-gray-400 hover:text-orange-800 transition-colors duration-300 mb-2"
            >graystackdev@gmail.com</a
          >
        </div>
      </div>
    </div>
    <div
      class="footer-bottom max-w-6xl mx-auto mt-8 pt-8 border-t border-white/10 text-center text-gray-400"
    >
      <p>&copy; 2025 GrayStackDev. Todos los derechos reservados.</p>
    </div>
  </footer>

  <!-- Scroll to Top Button -->
  <button
    id="scrollToTop"
    class="fixed bottom-8 right-8 w-12 h-12 bg-gradient-to-r from-orange-600 to-orange-500 text-white rounded-full shadow-lg opacity-0 transform translate-y-4 transition-all duration-300 hover:scale-110 hover:shadow-xl z-40"
    style="display: none;"
  >
    <svg
      class="w-6 h-6 mx-auto"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
    </svg>
  </button>
  
  </main>
  
  <Footer />
</Layout>

<script src="../scripts/main.js"></script>
